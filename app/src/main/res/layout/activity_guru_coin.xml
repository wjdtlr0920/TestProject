<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gurucoin.GuruCoinActivity">

  <com.journeyapps.barcodescanner.DecoratedBarcodeView
      android:id="@+id/decoratedBarcodeView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginBottom="100dp" />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/qrScan"
      android:layout_width="0dp"
      android:layout_height="100dp"
      android:text="QR SCAN"
      android:textColor="@color/black"
      android:gravity="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/qrMake"
      app:layout_constraintStart_toStartOf="parent" />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/qrMake"
      android:layout_width="0dp"
      android:layout_height="100dp"
      android:text="QR MAKE"
      android:textColor="@color/black"
      android:gravity="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/qrScan" />

</androidx.constraintlayout.widget.ConstraintLayout>