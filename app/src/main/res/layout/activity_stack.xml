<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stack.StackActivity">

    <TextView
        android:id="@+id/standard"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        style="@style/text_main_list"
        android:text="Standard"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/single_top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        style="@style/text_main_list"
        android:layout_marginTop="10dp"
        android:text="SingleTop"
        app:layout_constraintTop_toBottomOf="@id/standard" />

    <TextView
        android:id="@+id/single_task"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        style="@style/text_main_list"
        android:text="SingleTask"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/single_top" />

    <TextView
        android:id="@+id/single_instance"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        style="@style/text_main_list"
        android:text="SingleInstance"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/single_task" />


</androidx.constraintlayout.widget.ConstraintLayout>